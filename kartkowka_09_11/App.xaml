<Application x:Class="kartkowka_09_11.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:kartkowka_09_11"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="{x:Type Button}">

            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="150"/>
            <Style.Triggers>
                <Trigger Property="Content" Value="1">
                    <Setter Property="Background" Value="Red"/>
                </Trigger>
                <Trigger Property="Content" Value="2">
                    <Setter Property="Background" Value="Blue"/>
                </Trigger>
                <Trigger Property="Content" Value="3">
                    <Setter Property="Background" Value="Green"/>
                </Trigger>
                <Trigger Property="Content" Value="4">
                    <Setter Property="Background" Value="Yellow"/>
                </Trigger>

            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="wylosuj">
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="175"/>
        </Style>
    </Application.Resources>
</Application>
